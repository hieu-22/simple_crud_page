<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h2> Data table from database</h2>
    <table>
        <thead>
            <th hidden>id</th>
            <th>First Name</th>
            <th>Middle name</th>
            <th>LastName</th>
            <th>Age</th>
            <th>Gender</th>
            <th>ID</th>
            <th>Email</th>
            <th></th>
        </thead>

        <tbody>
            <% for (let i = 0; i < dataUser.length; i++) { %>
                <tr>
                    <td hidden><%= dataUser[i].user_id%> </td>
                    <td><%= dataUser[i].firstName %> </td>
                    <td><%= dataUser[i].middleName %> </td>
                    <td><%= dataUser[i].lastName %> </td>
                    <td><%= dataUser[i].age %> </td>
                    <td><%= dataUser[i].gender %> </td>
                    <td><%= dataUser[i].ID %> </td>
                    <td><%= dataUser[i].email %> </td>
                    <td class="tableActionButtons">
                        <form action="/delete-user" method="post">
                            <input type="text" name="userID" value="<%= dataUser[i].user_id%>" hidden>
                            <button type="submit">delete</button>
                        </form>
                        <form action="/details/<%= dataUser[i].user_id%>" method="get">
                            <button type="submit">details</button>
                        </form>
                    </td>
                </tr>
            <% } %> 
        </tbody>
    </table>
    <form action="/create-new-user" method="post">
        <div class="form__field">
            <label for="first-name">First Name</label>
            <input type="text" id="first-name" name="firstName">
        </div>
        <div class="form__field">
            <label for="middle-name">Middle Name</label>
            <input type="text" id="middle-name" name="middleName">
        </div>
        <div class="form__field">
            <label for="last-name">Last Name</label>
            <input type="text" id="last-name" name="lastName">
        </div>
        <div class="form__field">
            <label for="age">Age</label>
            <input type="text" id="age" name="age">
        </div>
        <div class="form__field">
            <label for="gender">Gender</label>
            <input type="text" id="gender" name="gender">
        </div>
        <div class="form__field">
            <label for="ID">ID</label>
            <input type="text" id="ID" name="ID">
        </div>
        <div class="form__field">
            <label for="email">Email</label>
            <input type="text" id="email" name="email">
        </div>
        <button type="submit">create user</button>
    </form>
</body>
</html>